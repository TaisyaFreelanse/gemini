# ====================
# Database Configuration
# ====================
POSTGRES_DB=scraper_db
POSTGRES_USER=scraper_user
POSTGRES_PASSWORD=your_secure_password_here
DATABASE_URL=postgresql://scraper_user:your_secure_password_here@postgres:5432/scraper_db

# ====================
# Redis Configuration
# ====================
REDIS_URL=redis://redis:6379/0

# ====================
# Gemini AI Configuration
# ====================
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# ====================
# Domains API Configuration
# ====================
# URL для отримання списку доменів для парсингу
DOMAINS_API_URL=https://api.example.com/domains

# ====================
# Webhook Configuration
# ====================
# URL та токен для відправки результатів парсингу
WEBHOOK_URL=https://your-webhook-url.com/endpoint
WEBHOOK_TOKEN=your_webhook_token_here

# ====================
# Proxy Configuration (Optional)
# ====================
# Залиште пустим якщо не використовуєте proxy
PROXY_HOST=
PROXY_HTTP_PORT=59100
PROXY_SOCKS_PORT=59101
PROXY_LOGIN=
PROXY_PASSWORD=

# ====================
# Scraping Settings
# ====================
SCRAPING_TIMEOUT=30
SCRAPING_MAX_RETRIES=3
